rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(ownerId) {
      return request.auth.uid == ownerId;
    }

    // Helper function to check if user owns a business
    function ownsBusiness(businessId) {
      return exists(/databases/$(database)/documents/businesses/$(businessId))
        && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      // Any authenticated user can read (needed for member ID lookup during QR scanning)
      allow read: if isAuthenticated();

      // Users can create their own document on first login
      allow create: if isAuthenticated() && isOwner(userId);

      // Users can update their own document (last login time)
      allow update: if isAuthenticated() && isOwner(userId);
    }

    // Businesses collection
    match /businesses/{businessId} {
      // Business owners can read their own business
      allow read: if isAuthenticated() && isOwner(resource.data.ownerId);

      // Business owners can create their own business
      allow create: if isAuthenticated() && isOwner(request.resource.data.ownerId);

      // Business owners can update their business
      // Protect subscription and usage limit fields (server-only)
      allow update: if isAuthenticated()
        && isOwner(resource.data.ownerId)
        && (
          // Subscription cannot be changed by client
          !request.resource.data.diff(resource.data).affectedKeys().hasAny(['subscription'])
        )
        && (
          // If usage not changed, allow any other updates
          !request.resource.data.diff(resource.data).affectedKeys().hasAny(['usage'])
          // If usage changed, ensure limits are not modified
          || (
            request.resource.data.usage.maxCustomers == resource.data.usage.maxCustomers
            && request.resource.data.usage.maxMonthlyStamps == resource.data.usage.maxMonthlyStamps
          )
        );
    }

    // Stamp cards collection
    match /stampCards/{cardId} {
      // Customers can read their own cards
      // Business owners can read cards for their business
      allow read: if isAuthenticated()
        && (isOwner(resource.data.userId) || ownsBusiness(resource.data.businessId));

      // Business owners can create stamp cards for their business
      allow create: if isAuthenticated()
        && request.resource.data.businessId is string
        && ownsBusiness(request.resource.data.businessId);

      // Business owners can update stamp cards for their business (add stamps)
      allow update: if isAuthenticated()
        && resource.data.businessId is string
        && ownsBusiness(resource.data.businessId);
    }

    // Transactions collection
    match /transactions/{transactionId} {
      // Customers can read their own transactions
      // Business owners can read transactions for their business
      allow read: if isAuthenticated()
        && (isOwner(resource.data.customerId) || ownsBusiness(resource.data.businessId));

      // Business owners can create transactions for their business
      allow create: if isAuthenticated()
        && request.resource.data.businessId is string
        && ownsBusiness(request.resource.data.businessId);
    }
  }
}
